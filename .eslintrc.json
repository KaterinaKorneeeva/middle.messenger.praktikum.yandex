{
  "extends": [
    "eslint:recommended", 
    "plugin:@typescript-eslint/recommended", 
    "airbnb"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "rules": {
    "max-len": [1, 200],
    "max-params": [2, 3],
    "no-undef": "off",
    "semi": ["error", "never"],
    "@typescript-eslint/no-var-requires": "error",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never",
        "": "never"
      }
    ],
    "import/no-unresolved": 0
  },
  "ignorePatterns": ["/dist", "/node_modules"]
}
